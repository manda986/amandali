$yellow: #ecd078;
$green: #53777A;
$charcoal: #39393b;

@font-face {
  font-family: 'Born';
  src: url(<%= asset_path 'Born.otf' %>);
}

body {
  font-family: "Born", sans-serif;
  font-size: 14px;
  color: #ffffff;

  //fixed navbar
  min-height: 2000px;
  padding-top: 40px;

  a, a:visited { text-decoration: none; color: $green; font-weight: bold;}
  a:hover {text-decoration: none; color: #ffffff; }
}

#home {
  border-top: none;

  h1 {
    color: $charcoal;
    opacity: 0.9;
    font-size: 3em;
    font-weight: bold;
    font-family: "Born", sans-serif;
    text-align: right;
    position: absolute;
    top: 100px;
    right: 100px;
    min-width: 100%;
    letter-spacing: 1px;
    z-index: 15;
  }

  h2 {
    color: $charcoal;
    font-size: 1.5em;
    font-family: "Born", sans-serif;
    text-align: right;
    position: absolute;
    top: 200px;
    right: 100px;
    margin-top: -10px;
    letter-spacing: 1px;
    opacity: 0.9;
    z-index: 15;
  }

  img { max-width: 1140px; width: 100%;}
}

h3 {
  padding: 0;
  margin: 5px;
  font-size: 1.3em;
  font-weight: bold;
  font-family: "Born", sans-serif;
  color: $green;
}


.section {
  display: block;
  margin: 0 auto;
  padding: 20px 5px 5px 5px;
  border-top: 2px solid $green;
  background-color: $charcoal;
  opacity: 0.9;
  font-size: 1.2em;
  text-align: center;

  h3 {
    padding: 0;
    margin: 5px;
    font-size: 1.4em;
    font-weight: bold;
    color: $green;
    text-transform: uppercase;
  }

}

#footer {
  background-color: $green;
  opacity: 0.9;
  font-size: 1.2em;
  padding: 20px;
  text-align: center;

  a, a:visited { text-decoration: none; color: #ffffff; }

}

@media (max-width: 767px) {

   #home h1, #home h2 { display: none; }

}

@media (min-width: 1300px) {

   #home h1, #home h2 { right: 200px; }

}