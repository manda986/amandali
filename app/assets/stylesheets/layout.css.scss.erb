$yellow: #ecd078;
$green: #53777A;
$charcoal: #39393b;

@font-face {
  font-family: 'Born';
  src: url(<%= asset_path 'Born.otf' %>);
}

body {
  font-family: "Born", sans-serif;
  font-size: 14px;

  //fixed navbar
  min-height: 2000px;
  padding-top: 40px;

}

.section {
  display: block;
  margin: 0 auto;
  width: 800px;
  height: 500px;
  padding: 0;
  border-top: 2px solid $green;

  //clear out active admin styling
  -webkit-border-radius: 0px;
  -moz-border-radius: 0px;
  border-radius: 0px;
  box-shadow: none;
  -moz-box-shadow: none;
  -webkit-box-shadow: none;

  h3 {
    padding: 0;
    margin: 5px;
    font-size: 1.4em;
    font-weight: bold;
    font-family: "Born", sans-serif;
    color: $green;
    text-transform: uppercase;

    //clear out active admin styling
    background: none;
    border: none;
    text-shadow: none;
    box-shadow: none;
  }

  a, a:visited { text-decoration: none; }

}

#home {
  border-top: none;
  background-image: url(<%= asset_path 'amanda.jpg' %>);

  h1 {
    color: $charcoal;
    opacity: 0.9;
    font-size: 3em;
    font-weight: bold;
    text-align: right;
    padding-top: 20px;
    padding-right: 20px;
    letter-spacing: 1px;
    font-family: "Born", serif;
  }

  h2 {
    color: $charcoal;
    font-size: 1.5em;
    text-align: right;
    margin-top: -10px;
    padding-right: 20px;
    letter-spacing: 1px;
    opacity: 0.9;
    font-family: "Born", serif;
  }
}

h3 {
  padding: 0;
  margin: 5px;
  font-size: 1.3em;
  font-weight: bold;
  font-family: "Born", sans-serif;
  color: $green;
  background: auto;
}

#footer {
  background-color: $green;
  opacity: 0.9;
  font-size: 1.2em;
  text-align: center;
  height: 50px;
  padding-top: 20px;
  width: 800px;
  margin: 0 auto;
}