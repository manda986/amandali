body {
  display: block;
  text-align: center;
  margin: 0 auto;

  font-family: "Arial", sans-serif;
  font-size: 14px;

}

.section {
  display: block;
  margin: 0 auto;
  width: 800px;
  height: 500px;
  padding: 0;
  border-top: 2px solid #C02942;
}

#home {
  border-top: none;
  background-image: url(<%= asset_path 'amanda.jpg' %>);

  h1 {
    font-family: "Arial Black", sans-serif;
    color: #53777A;
    opacity: 0.9;
    font-size: 3em;
    text-align: right;
    padding-top: 20px;
    padding-right: 20px;
    letter-spacing: 1px;
  }

  h2 {
    color: #D95B43;
    font-size: 1.5em;
    text-align: right;
    margin-top: -10px;
    padding-right: 20px;
    letter-spacing: 1px;
    opacity: 0.9;
  }

  ul#menu {
    width: 400px;
    background-color: #53777A;
    border-radius: 3px;
    z-index:99;
    list-style-type: none;
    padding-right: 20px;
    margin: 0px;
    margin-top: 20px;
    float:right;
    color: #ECD078;
    font-size: 1.3em;

    li {
      float:left;
      opacity: 1;

      a:link, a:visited {
        opacity: 1;
        display: block;
        padding: 5px 5px 5px 5px;
        text-decoration: none;
        color: #ECD078;
      }
      a:hover {
        color: #D95B43;
      }
    }
  }
}

h3 {
            padding: 0;
            margin: 5px;
  font-size: 1.3em;
  font-weight: bold;
  font-family: "Arial Black", sans-serif;
  color: #53777A;
}
